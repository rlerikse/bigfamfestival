{
  "cli": {
    "version": ">= 15.0.14",
    "appVersionSource": "remote"
  },
  "build": {
    "development": {
      "developmentClient": true,
      "distribution": "internal"
    },
    "preview": {
      "distribution": "internal"
    },
    "production": {
      "autoIncrement": true,
      "env": {
        "APP_ENV": "production"
      },
      "hooks": {
        "pre-build": "echo $GOOGLE_SERVICES_JSON | base64 --decode > google-services.json"
      }
    }
  },
  "submit": {
    "production": {}
  }
}
